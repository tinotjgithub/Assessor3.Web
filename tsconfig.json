{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./build/generated/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.collection",
      "es2015.iterable"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./typings"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}